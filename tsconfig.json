{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": false,
    "target": "ES2016",
    "allowJs": false,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": false,
    "jsx": "react",
    "strict": false,
    "rootDir": ".",
    "outDir": "build/dist",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": false,
    "lib": [
      "es6",
      "dom"
    ],
    "types": [
      "cypress",
      "node"
    ]
  },
  "include": [
    "src/**/*",
    "tests/**/*"
  ],
  "types": [
    "typePatches"
  ]
}
