{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "commonjs",
    "target": "es6",
    "lib": [
      "es6",
      "dom"
    ],
    "types": [
      "cypress",
      "node"
    ],
    "sourceMap": false,
    "allowJs": true,
    "jsx": "react",
    "strict": false,
    "moduleResolution": "node",
    "rootDir": ".",
    "outDir": "build/dist",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*"
  ],
  "paths": {
    "src/*": [
      "src/*"
    ]
  },
  "types": [
    "typePatches"
  ]
}
